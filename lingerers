import pygame, sys
from settings import Settings

def run_game(): # Initialize game, settings, and screen object:
    pygame.init()
    ai_settings = Settings() # creates a variable to store our Settings class
    screen = pygame.display.set_mode((ai_settings.screen_width,
        ai_settings.screen_height))
    pygame.display.set_caption("The Lingerers")
    # Starts the main loop:
    while True: 
        # Wait for keyboard events:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                sys.exit()
        # Redraw the screen everytime through the loop:
        screen.fill(ai_settings.bg_color)
        # Make the most recently drawn (updated) screen visible:
        pygame.display.flip()

# Runs the function we created:
run_game()
